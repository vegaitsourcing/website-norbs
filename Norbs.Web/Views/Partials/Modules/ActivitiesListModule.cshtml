@inherits UmbracoViewPage<Norbs.Core.ViewModels.Partials.Listing.ActivitiesListViewModel>

<script defer src="~/js/activities.js"></script>

<div class="tabs-block">
    <div class="wrap wrap--inner">
        <div class="tabs-block__container">
            <ul class="tabs-block__list tab-list">
                @{ foreach (var category in Model.Categories)
                    {
                        <li class="tabs-block__item tab-item">
                            <button type="button" class="tabs-block__btn js-tab tab @(category.IsActive == true ? "tab--active" : "" ) activity-button">
                                @category.Name
                            </button>
                        </li>
                    }
                }
            </ul>
            <div class="tabs-block__holder js-tab-holder">
                <h3 class="tabs-block__title h3 js-tab-title">@( Model.Categories?.FirstOrDefault(cat => cat.IsActive)?.Name )</h3>
                @{ foreach (var activity in Model.Items)
                    {
                        <a href="@activity.Url">@activity.Title</a>
                    }
                }
            </div>
        </div>
    </div>
</div>